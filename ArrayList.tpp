template <typename T>
void ArrayList<T>::bubbleSort() {
    int n = this->length;
    bool swapped;
    for (int i = 0; i < n - 1; i++) {
        swapped = false;
        for (int j = 0; j < n - 1 - i; j++) {
            numComps++;
            
            if (buffer[j] > buffer[j + 1]) {
                swap(j, j + 1);
                numSwaps++;
                swapped = true;
            }
        }
        if (swapped == false)
            break;
    }
}

