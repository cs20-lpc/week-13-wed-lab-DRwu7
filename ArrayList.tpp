template <typename T>
void ArrayList<T>::selectionSort() {
    int n = this->length;
    for (int i = 0; i < n - 1; i++) {
        // Find the minimum element in unsorted array buffer[i..n-1]
        int min_idx = i;
        for (int j = i + 1; j < n; j++) {
            // Increment comparison count
            numComps++;
            
            if (buffer[j] < buffer[min_idx]) {
                min_idx = j;
            }
        }
        
        // Swap the found minimum element with the first element
        if (min_idx != i) {
            swap(min_idx, i);
            numSwaps++;
        }
    }
}

